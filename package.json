{
  "name": "xstate-component-tree",
  "version": "4.0.0",
  "description": "Build a tree of components based on statechart values",
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "type": "module",
  "module": "dist/esm/component-tree.js",
  "main": "dist/cjs/component-tree.js",
  "exports": {
    ".": {
      "import": "./dist/esm/component-tree.js",
      "require": "./dist/cjs/component-tree.js"
    },
    "./component": {
      "import": "./dist/esm/component-helper.js",
      "require": "./dist/cjs/component-helper.js"
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@tivac/eslint-config": "^2.4.0",
    "c8": "^7.11.0",
    "@changesets/cli": "^2.23.0",
    "chokidar-cli": "^3.0.0",
    "dedent": "^0.7.0",
    "eslint": "^8.18.0",
    "esm": "^3.2.25",
    "nanospy": "^0.5.0",
    "object-inspect": "^1.12.0",
    "rollup": "^2.75.7",
    "rollup-plugin-terser": "^7.0.2",
    "shx": "^0.3.4",
    "strip-ansi": "^7.0.1",
    "uvu": "^0.5.4",
    "xstate": "^4.30.6"
  },
  "peerDependencies": {
    "xstate": "^4.7.8"
  },
  "scripts": {
    "build": "shx rm -rf dist/* && rollup --config",
    "lint": "eslint . --max-warnings=0",
    "test": "uvu",
    "test:coverage": "c8 --check-coverage --100 --reporter=html --reporter=text uvu",
    "test:report": "c8 report --reporter=text-lcov > coverage/tests.lcov",
    "test:watch": "chokidar \"**/*.js\" -c \"npm test\"",
    "prerelease": "npm run test && npm run build",
    "release": "changeset publish",
    "postrelease": "git push --follow-tags"
  },
  "keywords": [
    "xstate",
    "components",
    "statecahart"
  ],
  "files": [
    "dist/"
  ]
}
